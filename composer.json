{
    "name": "termyn/cqrs",
    "description": "CQRS architecture based on the Symfony Messenger 4.3 and higher",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Edo Barnas",
            "email": "iam@edobarnas.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Termyn\\Cqrs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Termyn\\Cqrs\\Test\\": "tests"
        }
    },
    "require": {
        "php": "^8.2",
        "symfony/messenger": "^4.3|^5|^6",
        "symfony/validator": "^4.3|^5|^6",
        "termyn/id": "^0.1",
        "termyn/date-time": "^0.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.2",
        "symplify/easy-coding-standard": "^11.5"
    }
}
